<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChronometreActivity">
    <Button
            android:layout_width="131dp"
            android:layout_height="54dp" android:id="@+id/button5"
            android:onClick="clickStop"
            app:icon="@drawable/stop" app:iconSize="40dp"
            app:backgroundTint="#F44336" app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="284dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            tools:text="Stop" app:layout_constraintHorizontal_bias="0.0" android:textColor="#000000"
    />
    <Button
            android:text="START"
            android:layout_width="129dp"
            android:layout_height="52dp" android:id="@+id/button6"
            android:onClick="clickStart"
            app:backgroundTint="#4CAF50" app:icon="@drawable/start"
            app:iconSize="30dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="208dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:textColor="#263238" tools:ignore="HardcodedText,TextContrastCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>